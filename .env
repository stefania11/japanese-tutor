# Japanese Tutor Configuration
# Copy this file to .env and fill in your API keys

# User identification
USER_ID=stef


# OpenAI API key for GPT-4o
OPENAI_API_KEY=key


# ElevenLabs for voice
ELEVENLABS_API_KEY=key
ELEVENLABS_VOICE_ID=key

# Daily for real-time communication
DAILY_ROOM_URL=https://hackidemia.daily.co/Japanese_tutor_custom
DAILY_API_KEY=key

# Deepgram for speech recognition
DEEPGRAM_API_KEY=key

# Optional: Fal.ai for image generation
FAL_KEY=key

# Tutor settings
DEFAULT_DIFFICULTY=beginner  # beginner, intermediate, advanced
LEARNING_PACE=medium  # slow, medium, fast
FOCUS_AREAS=vocabulary,grammar,conversation  # comma-separated
PREFERRED_MEDIA=text,audio,images  # comma-separated